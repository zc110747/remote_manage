{
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        "**/*.dtb":true,
        "**/*.cmd":true,
        "**/*.tmp":true,

        "arch/[m,n,p,r,s,x]*":true,
        "arch/arc":true,
        "arch/arm/dts/[A-Z, a-h, j-z]*":true,
        "arch/arm/dts/imx6-*":true,
        "arch/arm/dts/imx6[a-t]*":true,
        "arch/arm/dts/imx6ul-9*":true,
        "arch/arm/dts/imx6ull-9*":true,
        "arch/arm/dts/imx6ul-14x14-d*":true,
        "arch/arm/dts/imx6ull-14x14-d*":true,
        "arch/arm/dts/imx6ul-[i,g,o,p,k,l]*":true,
        "arch/arm/dts/imx6ull-[i,g,o,p,k,l]*":true,
        "arch/arm/dts/imx[!6, a-z]*":true,
        "arch/arm/cpu/arm[0-9]*":true,
        "arch/arm/cpu/armv7m":true,
        "arch/arm/cpu/armv8":true,
        "arch/arm/cpu/pxa":true,
        "arch/arm/cpu/sa1100":true,
        "arch/arm/cpu/armv7/bcm*":true,
        "arch/arm/cpu/armv7/s5p*":true,
        "arch/arm/cpu/armv7/vf*":true,
        "arch/arm/cpu/armv7/stv*":true,
        "arch/arm/cpu/armv7/ko*":true,     
        "arch/arm/mach-[a-h, k-z]*":true,
        "arch/arm/mach-i[n,p]*":true,
        "arch/arm/mach-imx/imx*":true,
        "arch/arm/mach-imx/mx[!6]*":true,

        "configs/[0-9, a-l, n-z, A-Z]*":true,
        "configs/m[!x]*":true,
        "configs/mx[!6]*":true,
        "configs/mx6[!u]*":true,
        "configs/mx6ul[!l]*":true,
        "configs/mx6ull_[!1]*":true,
        "configs/mx6ull_14x14_[!e]*":true,

        "board/[a-e, g-z, A-Z]*":true,
        "board/fi*":true,
        "board/fri*":true,
        "board/freescale/[c,i,l,p,t,v]*":true,
        "board/freescale/m[1-9,p]*":true,
        "board/freescale/mx[!6]*":true,
        "board/freescale/mx6[!u]*":true,
        "board/freescale/mx6ul_*":true,
        "board/freescale/mx6ull_*":true,

        "cmd/[b,m,r,t,s,x]*":true,

        "dts/":true,

        "include/configs/[0-9, a-l, A-Z]*":true,
        "include/configs/m[a-w]*":true,
        "include/configs/m[A-Z]*":true,
    },

    "search.exclude":{
        "doc/":true,
        "examples/":true,
        "scripts/":true,
        "test/":true,
        "tools/":true,
        "common/spl/":true,
        "**/README":true,
    },
    "files.associations": {
        "*.tcc": "c"
    }
}